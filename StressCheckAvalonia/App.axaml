<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="StressCheckAvalonia.App"
             RequestedThemeVariant="Light">
	<Application.Resources>
		<FontFamily x:Key="MeiryoUI">
			avares://StressCheckAvalonia/Assets/Fonts/MeiryoUI.ttf#Meiryo UI
		</FontFamily>

		<!-- Color Tokens -->
		<SolidColorBrush x:Key="AppPrimaryBrush" Color="#7CB342" />
		<SolidColorBrush x:Key="AppPrimaryHoverBrush" Color="#558B2F" />
		<SolidColorBrush x:Key="AppPrimaryLightBrush" Color="#F1F8E9" />
		<SolidColorBrush x:Key="AppBackgroundBrush" Color="#F6FAF1" />
		<SolidColorBrush x:Key="AppHeaderBackgroundBrush" Color="#EBF5E0" />
		<SolidColorBrush x:Key="AppTextPrimaryBrush" Color="#1A1A1A" />
		<SolidColorBrush x:Key="AppTextSecondaryBrush" Color="#4A6A30" />
		<SolidColorBrush x:Key="AppTextTertiaryBrush" Color="#7A9A60" />
		<SolidColorBrush x:Key="AppDividerBrush" Color="#C8E6A0" />
		<SolidColorBrush x:Key="AppRequiredMarkBrush" Color="#D32F2F" />

		<!-- Font Size Tokens -->
		<x:Double x:Key="FontSizeCaption">11</x:Double>
		<x:Double x:Key="FontSizeBody">13</x:Double>
		<x:Double x:Key="FontSizeSubtitle">15</x:Double>
		<x:Double x:Key="FontSizeTitle">18</x:Double>
		<x:Double x:Key="FontSizeHeader">20</x:Double>
	</Application.Resources>
	<Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes>
				<ColorPaletteResources x:Key="Light" Accent="#ff7cb342" AltHigh="White" AltLow="White" AltMedium="White" AltMediumHigh="White" AltMediumLow="White" BaseHigh="#ff1a1a1a" BaseLow="#ffcfddbe" BaseMedium="#ff8ba070" BaseMediumHigh="#ff6a7e52" BaseMediumLow="#ff7a9060" ChromeAltLow="#ff6a7e52" ChromeBlackHigh="Black" ChromeBlackLow="#ffcfddbe" ChromeBlackMedium="#ff6a7e52" ChromeBlackMediumLow="#ff8ba070" ChromeDisabledHigh="#ffcfddbe" ChromeDisabledLow="#ff8ba070" ChromeGray="#ff7a9060" ChromeHigh="#ffcfddbe" ChromeLow="#fff0f7e6" ChromeMedium="#ffe5f1d5" ChromeMediumLow="#fff0f7e6" ChromeWhite="White" ListLow="#ffe5f1d5" ListMedium="#ffcfddbe" RegionColor="#fff6faf1" />
			</FluentTheme.Palettes>
		</FluentTheme>

		<!-- Global Font -->
		<Style Selector="TextBlock">
			<Setter Property="FontFamily" Value="{StaticResource MeiryoUI}"/>
			<Setter Property="Foreground" Value="{StaticResource AppTextPrimaryBrush}"/>
		</Style>
		<Style Selector="Button">
			<Setter Property="FontFamily" Value="{StaticResource MeiryoUI}"/>
		</Style>
		<Style Selector="RadioButton">
			<Setter Property="FontFamily" Value="{StaticResource MeiryoUI}"/>
			<Setter Property="Padding" Value="8,6"/>
			<Setter Property="MinHeight" Value="32"/>
		</Style>
		<Style Selector="TextBox">
			<Setter Property="FontFamily" Value="{StaticResource MeiryoUI}"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="Padding" Value="12,10"/>
		</Style>
		<Style Selector="ComboBox">
			<Setter Property="FontFamily" Value="{StaticResource MeiryoUI}"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="MinHeight" Value="38"/>
		</Style>
		<Style Selector="DatePicker">
			<Setter Property="FontFamily" Value="{StaticResource MeiryoUI}"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
		</Style>

		<!-- Primary Button -->
		<Style Selector="Button.primary">
			<Setter Property="Background" Value="{StaticResource AppPrimaryBrush}"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="28,12"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
		</Style>
		<Style Selector="Button.primary:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="{StaticResource AppPrimaryHoverBrush}"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<!-- Secondary Button -->
		<Style Selector="Button.secondary">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="{StaticResource AppPrimaryBrush}"/>
			<Setter Property="Foreground" Value="{StaticResource AppPrimaryBrush}"/>
			<Setter Property="BorderThickness" Value="1.5"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="24,11"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
			<Setter Property="FontWeight" Value="Medium"/>
		</Style>
		<Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="{StaticResource AppPrimaryLightBrush}"/>
		</Style>

		<!-- Question Row Hover -->
		<Style Selector="Border.questionRow">
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.12"/>
				</Transitions>
			</Setter>
		</Style>
		<Style Selector="Border.questionRow:pointerover">
			<Setter Property="Background" Value="{StaticResource AppPrimaryLightBrush}"/>
		</Style>
	</Application.Styles>
</Application>
