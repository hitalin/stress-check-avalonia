<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.QuestionText"
             x:DataType="local:QuestionViewModel">

	<StackPanel Orientation="Horizontal"
                Margin="24,6,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
				Background="{Binding Background}" >
		<TextBlock x:Name="QuestionIdTextBlock"
                   FontSize="{StaticResource FontSizeBody}"
                   Foreground="{StaticResource AppTextSecondaryBrush}"
                   Text="{Binding Question.Id}" />
		<TextBlock Text="."
                   FontSize="{StaticResource FontSizeBody}"
                   Foreground="{StaticResource AppTextSecondaryBrush}" />
		<TextBlock x:Name="QuestionTextTextBlock"
                   FontSize="{StaticResource FontSizeBody}"
                   Margin="6,0,0,0"
                   Text="{Binding Question.Text}" />
	</StackPanel>
</UserControl>
