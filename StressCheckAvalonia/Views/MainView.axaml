<UserControl x:Class="StressCheckAvalonia.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.Views"
             xmlns:vm="clr-namespace:StressCheckAvalonia.ViewModels"
             x:DataType="vm:StateViewModel">
	<ScrollViewer HorizontalScrollBarVisibility="Auto">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="70"/>
			</Grid.RowDefinitions>
			<local:AppHeader x:Name="AppHeaderControl" Grid.Row="0"/>
			<local:AppTitle Grid.Row="1"/>
			<local:SectionDescription x:Name="SectionDescriptionControl" Grid.Row="2" />
			<ContentControl x:Name="EmployeeInformationControl" Grid.Row="3" IsVisible="{Binding IsInput}">
				<local:EmployeeInformation />
			</ContentControl>
			<ItemsControl Grid.Row="3"
			              IsVisible="{Binding IsSectionActive}"
			              ItemsSource="{Binding SectionViewModel.DisplayedQuestionViewModels}">
				<ItemsControl.ItemTemplate>
					<DataTemplate x:DataType="vm:QuestionViewModel">
						<Border Classes="questionRow">
							<StackPanel>
								<Grid Margin="0,4,0,4">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									<local:QuestionText Grid.Column="0"/>
									<local:ChoiceButtons Grid.Column="1"
									                     HorizontalAlignment="Right"
									                     Margin="0,0,24,0"/>
								</Grid>
								<Border BorderThickness="0,0,0,1"
								        BorderBrush="{StaticResource AppDividerBrush}"
								        Margin="24,0,24,0"/>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<local:AggregateResults Grid.Row="3" />
			<Border Grid.Row="5"
			        BorderBrush="{StaticResource AppDividerBrush}"
			        BorderThickness="0,1,0,0"
			        Background="{StaticResource AppBackgroundBrush}">
				<DockPanel LastChildFill="False" Margin="24,0,24,0">
					<local:BackButtons DockPanel.Dock="Left" VerticalAlignment="Center"/>
					<local:NextButton DockPanel.Dock="Right" VerticalAlignment="Center"/>
				</DockPanel>
			</Border>
		</Grid>
	</ScrollViewer>
</UserControl>
