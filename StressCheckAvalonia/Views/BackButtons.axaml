<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.BackButtons"
             x:DataType="local:StateViewModel">

	<StackPanel Orientation="Horizontal">
		<Button Content="タイトルに戻る"
		        Click="BackToTitle_Click"
		        Classes="secondary"
		        Margin="0,0,10,0"
		        MinWidth="140"
		        HorizontalContentAlignment="Center"
		        VerticalContentAlignment="Center"
		        IsVisible="{Binding IsInputInverted}" />
		<Button Content="1つ前の画面へ戻る"
		        Click="BackOneScreen_Click"
		        Classes="secondary"
		        MinWidth="140"
		        HorizontalContentAlignment="Center"
		        VerticalContentAlignment="Center"
		        IsVisible="{Binding IsInputInverted}" />
	</StackPanel>
</UserControl>
