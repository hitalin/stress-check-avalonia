<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.AppTitle"
             x:DataType="local:StateViewModel"
             Height="52"
             HorizontalAlignment="Stretch">
	<Border Background="{StaticResource AppPrimaryBrush}" Margin="0,4,0,0">
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center"
		            Margin="20,0,0,0" Spacing="12">
			<Image Source="/Assets/Images/icon.png" Width="28" Height="28" VerticalAlignment="Center"/>
			<TextBlock Text="{Binding AppTitle}"
			           FontSize="{StaticResource FontSizeHeader}"
			           FontWeight="SemiBold"
			           Foreground="White"
			           VerticalAlignment="Center"/>
		</StackPanel>
	</Border>
</UserControl>
