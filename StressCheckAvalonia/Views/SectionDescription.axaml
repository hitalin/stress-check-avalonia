<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StressCheckAvalonia.ViewModels"
             x:Class="StressCheckAvalonia.Views.SectionDescription"
             x:DataType="local:StateViewModel">

	<Border BorderThickness="3,0,0,0"
	        BorderBrush="{StaticResource AppPrimaryBrush}"
	        Background="{StaticResource AppPrimaryLightBrush}"
	        Margin="24,8,24,4"
	        Padding="12,8"
	        CornerRadius="0,6,6,0">
		<TextBlock x:Name="DescriptionTextBlock"
		           Text="{Binding DescriptionText}"
		           FontSize="{StaticResource FontSizeBody}"
		           Foreground="{StaticResource AppTextSecondaryBrush}"
		           TextWrapping="Wrap"/>
	</Border>
</UserControl>
